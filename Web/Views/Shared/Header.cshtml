    <div class="main-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-2 col-md-2 col-sm-2">
                    <a target="_self" href="/"><img class="ed-logo" src="/Static/img/logga.jpg"></a>
                </div>
                <div class="col-lg-8 col-md-8 col-sm-8">
                    <ul class="main-menu">
                        @foreach (var page in Model.MainMenu)
                        {
                            <li>
                                @if (page.PageName == "Lunch")
                                {
                                    <i class="fas fa-utensils"></i>
                                }
                                @if (page.PageName == "Sport")
                                {
                                    <i class="fas fa-futbol"></i>
                                }
                                @if (page.PageName == "Control Panel")
                                {
                                    <i class="fas fa-cog"></i>
                                }
                                @if (page.PageName == "Articles")
                                {
                                    <i class="fas fa-file-alt"></i>
                                }
                                @if (page.PageName == "News")
                                {
                                    <i class="fas fa-newspaper"></i>
                                }
                                <a href="@page.PageUrl" title="@page.PageName">@page.PageName</a>
                            </li>
                        }
                    </ul>
                </div>
                <div class="col-lg-2 col-md-2">
                    <div class="log-in-search">
                        <div class="log-in">
                            <a href="/Admin" title="Log in">
                                <i class="fas fa-sign-in-alt"></i>
                            </a>
                        </div>
                        <div class="search">
                            <div class="search-up">
                                <i class="fas fa-search"></i>
                            </div>
                            <div class="search-down">
                                <i class="fas fa-times"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="search-panel">
        <div class="search-box">
            <div class="magnifying-glass">
                <i class="fas fa-search fa-2x"></i>
            </div>
            <input type="text" class="search-input" placeholder="Search information">
        </div>

    </div>
</div>

@{Html.RenderPartial("MobileNavigation", Model);}
