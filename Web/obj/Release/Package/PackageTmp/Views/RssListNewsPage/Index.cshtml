<div class="news-list-page">
    <div class="container">
        <div class="row">
            <div class="main-text">
                <h1>@Model.CurrentPage.Heading</h1>
                @Model.CurrentPage.Ingress
            </div>
        </div>
        <div class="row">
            @foreach (var page in Model.CurrentPage.Children.CastToPageList<RssNewsPage>()) { 
                <div class="col-lg-6 col-md-6 col-sm-12">
                    <div class="news-list-item">
                        <a class="no-underline" target="_self" href="@page.PageUrl">
                            <div class="news-list-item-picture"><img src="@page.Image"/></div>
                            <div class="news-list-item-text-container">
                                <h4 class="news-list-item-title">@page.Heading</h4>
                                <div class="news-list-item-description">@page.Ingress</div>
                                <div class="news-list-item-read-more">
                                    Läs mer
                                </div>
                                <div class="read-more-underline">
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
